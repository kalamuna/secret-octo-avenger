block navbar
  nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href=locals.url)= locals.title
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li.dropdown
            a(href="#" data-toggle="dropdown" class="dropdown-toggle")
              |Bootstrap
              span.caret(aria-hidden="true")
            ul.dropdown-menu
              for bsPage in contents['bootstrap']
                - var index=bsPage['index.json']
                - var isActive = page && (index.url == page.url)
                li(class= isActive? 'active': '')
                  a(href=index.url)=index.title
          if locals.nav
            for link in locals.nav
              - var isActive = (link.url == page.url)
              li(class= isActive? 'active': '')
                a(href=link.url)=link.title
